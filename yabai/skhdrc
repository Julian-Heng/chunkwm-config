# Show system statistics
fn + alt - 1 : "${HOME}"/.config/yabai/scripts/show_cpu.sh
fn + alt - 2 : "${HOME}"/.config/yabai/scripts/show_mem.sh
fn + alt - 3 : "${HOME}"/.config/yabai/scripts/show_bat.sh
fn + alt - 4 : "${HOME}"/.config/yabai/scripts/show_disk.sh
fn + alt - 5 : "${HOME}"/.config/yabai/scripts/show_song.sh

# Focus between windows
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east
alt - n : yabai -m window --focus next
alt - p : yabai -m window --focus prev

# Swapping windows
lctrl + alt - h : yabai -m window --swap west
lctrl + alt - j : yabai -m window --swap south
lctrl + alt - k : yabai -m window --swap north
lctrl + alt - l : yabai -m window --swap east

# Rotate windows clockwise and anticlockwise
lctrl + alt - r : yabai -m space --rotate 90
alt - r : yabai -m space --rotate 270

# Rotate on X and Y Axis
lctrl + alt - x : yabai -m space --mirror x-axis
lctrl + alt - y : yabai -m space --mirror y-axis

# Move window to space
lctrl + alt - m : yabai -m window --space last
lctrl + alt - p : yabai -m window --space prev
lctrl + alt - n : yabai -m window --space next
lctrl + alt - 1 : yabai -m window --space 1 && yabai -m space --focus 1 && yabai -m window --focus recent
lctrl + alt - 2 : yabai -m window --space 2 && yabai -m space --focus 2 && yabai -m window --focus recent
lctrl + alt - 3 : yabai -m window --space 3 && yabai -m space --focus 3 && yabai -m window --focus recent
lctrl + alt - 4 : yabai -m window --space 4 && yabai -m space --focus 4 && yabai -m window --focus recent
lctrl + alt - 5 : yabai -m window --space 5 && yabai -m space --focus 5 && yabai -m window --focus recent
lctrl + alt - 6 : yabai -m window --space 6 && yabai -m space --focus 6 && yabai -m window --focus recent


# Float, Move and Resize window
# <rows>:<cols>:<start-column>:<start-row>:<width>:<height>
lctrl + cmd - h : yabai -m window --toggle float;\
                  yabai -m window --grid 1:2:0:0:1:1 # left half
lctrl + cmd - j : yabai -m window --toggle float;\
                  yabai -m window --grid 2:1:0:1:1:1 # bottom half
lctrl + cmd - k : yabai -m window --toggle float;\
                  yabai -m window --grid 2:1:0:0:1:1 # top half
lctrl + cmd - l : yabai -m window --toggle float;\
                  yabai -m window --grid 1:2:1:0:1:1 # right half
lctrl + cmd - u : yabai -m window --toggle float;\
                  yabai -m window --grid 2:2:0:0:1:1 # top left
# left square bracket
lctrl + cmd - 0x21  : yabai -m window --toggle float;\
                  yabai -m window --grid 2:2:1:0:1:1 # top right
lctrl + cmd - m : yabai -m window --toggle float;\
                  yabai -m window --grid 2:2:0:1:1:1 # bottom left
# backslash
lctrl + cmd - 0x2C : yabai -m window --toggle float;\
                  yabai -m window --grid 2:2:1:1:1:1 # bottom right
lctrl + cmd - i : yabai -m window --toggle float;\
                  yabai -m window --grid 1:3:0:0:1:1 # left third
lctrl + cmd - y : yabai -m window --toggle float;\
                  yabai -m window --grid 1:3:0:0:2:1 # left two thirds
lctrl + cmd - o : yabai -m window --toggle float;\
                  yabai -m window --grid 1:3:1:0:1:1 # center third
# right square bracket
lctrl + cmd - 0x1E : yabai -m window --toggle float;\
                  yabai -m window --grid 1:3:1:0:2:1 # right two thirds
lctrl + cmd - p : yabai -m window --toggle float;\
                  yabai -m window --grid 1:3:2:0:1:1 # right third
lctrl + cmd - a : yabai -m window --toggle float;\
                  yabai -m window --grid 3:1:0:0:1:1 # top third
lctrl + cmd - s : yabai -m window --toggle float;\
                  yabai -m window --grid 3:1:0:1:1:1 # middle third
lctrl + cmd - d : yabai -m window --toggle float;\
                  yabai -m window --grid 3:1:0:2:1:1 # bottom third
# return
lctrl + cmd - c : yabai -m window --toggle float;\
                  yabai -m window --grid 6:6:1:1:4:4 # center
lctrl + cmd - 0x24 : yabai -m window --toggle zoom-fullscreen # maximize
lctrl + alt - 0x24 : yabai -m window --toggle zoom-fullscreen # maximize
lctrl + alt - f : yabai -m window --toggle zoom-fullscreen # maximize

# Make window native fullscreen
lctrl + cmd - f : yabai -m window --toggle native-fullscreen

# Float / Unfloat window
lctrl + cmd - space : yabai -m window --toggle float

# Toggle Active Window Border
lctrl + cmd - b: yabai -m window --toggle border

# Enable / Disable gaps in current workspace
lctrl + cmd - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Toggle window split type (horizontal, vertical)
lctrl + alt - s: yabai -m window --toggle split

# Resize windows
shift + alt - h : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

shift + alt - j : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

shift + alt - k : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

shift + alt - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# Equalize size of windows (=)
shift + alt - 0x18 : yabai -m space --balance

# Set insertion point for focused container
lctrl + shift + alt - h : yabai -m window --insert west
lctrl + shift + alt - j : yabai -m window --insert south
lctrl + shift + alt - k : yabai -m window --insert north
lctrl + shift + alt - l : yabai -m window --insert east

# Restart Yabai
lctrl + shift + alt - r :
    /usr/bin/env osascript <<< \
        "display notification \"Restarting Yabai\" with title \"Yabai\""; \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

